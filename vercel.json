{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install --omit=optional --no-optional --no-package-lock --no-audit",
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "github": {
    "silent": true
  },
  "env": {
    "ASTRO_TELEMETRY_DISABLED": "1",
    "NODE_OPTIONS": "--max_old_space_size=4096"
  }
} 