    <!-- 项目网格 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-105 flex flex-col h-full">
          <div class="relative h-48 overflow-hidden">
            <img 
              src={project.image}
              alt={`${project.title}封面`} 
              class="w-full h-full object-cover transition-transform hover:scale-110"
            />
          </div>
          <div class="p-4 flex-grow">
            <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-white">{project.title}</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map((tag) => (
                <span class="px-2 py-1 bg-gray-200 dark:bg-gray-600 text-gray-800 dark:text-gray-200 text-xs rounded">
                  {tag}
                </span>
              ))}
            </div>
          </div>
          <div class="px-6 pb-6 mt-auto">
            <a 
              href={project.github} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="inline-flex items-center justify-center w-full px-4 py-2 bg-gray-200 dark:bg-gray-600 text-gray-800 dark:text-white rounded-lg hover:bg-gray-300 dark:hover:bg-gray-500 transition"
